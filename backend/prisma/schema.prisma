generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entry {
  id               Int       @id @default(autoincrement())
  familyName       String
  personalName     String
  familyNameKana   String
  personalNameKana String
  gender           String
  birthday         DateTime  @db.Date
  prefecture       String
  tel              String
  email            String
  isAccompanied    Boolean
  visitDay         DateTime  @db.Date
  visitTime        String
  checkInTime      DateTime? @db.Time
  entrySlotId      Int
  entrySlot        EntrySlot @relation(fields: [entrySlotId], references: [id])

  @@map("Entries")
}

model EntrySlot {
  id           Int      @id @default(autoincrement())
  day          DateTime @unique @db.Date
  time         DateTime @db.Time
  capacity     Int
  entry        Int
  isReservable Boolean
  Entries      Entry[]

  @@map("EntrySlots")
}
